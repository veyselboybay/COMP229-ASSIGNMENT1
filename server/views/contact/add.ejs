<% include ../partials/header.ejs %>
<% include ../partials/main_nav.ejs %>



<div class="container">
    <form method="POST" class="form container text-center">
        <h1 class="text-center"><%= title %></h1>
        
        <table class="table">
            <thead class="thead-dark">
              <tr>
                <th scope="col">Contact Name</th>
                <th scope="col">Contact Number</th>
                <th scope="col">Contact Email</th>
              </tr>
            </thead>
            <tbody >
                <tr>
                    <td><input type="text" class="form-control text-center" id="nameTextField" placeholder="Enter person's name here" name="name"  required></td>
                    <td><input type="text" class="form-control text-center" id="numberTextField" placeholder="Enter person's number here" name="number"  required></td>
                    <td><input type="text" class="form-control text-center" id="emailTextField" placeholder="Enter person's email here" name="email"  required></td>
                </tr>
                <tr>
                    <td>
                        <div class="col-md-12 text-left">
                            <a href="/contact-list" class="btn btn-warning"><i class="fas fa-chevron-circle-left"></i> Return</a>
                       </div>
                    </td>
                    <td></td>
                    <td>
                        <div class="col-md-12 text-right">
                            <label for="submitButton"><strong>Click here to Confirm</strong></label>
                          <button type="submit" class="btn btn-success" id="submitButton"><i class="far fa-check-circle fa-lg"></i></button> 
                       </div>
                    </td>
                </tr>
              
            </tbody>
          </table>
          
         

    </form>
</div>

<% include ../partials/bottom_nav.ejs %>
<% include ../partials/footer.ejs %>